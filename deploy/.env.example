# MySQL Configuration
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=event_trigger
MYSQL_USER=appuser
MYSQL_PASSWORD=apppassword
MYSQL_PORT=3306

# Kafka Configuration
KAFKA_NODE_ID=1
KAFKA_EXTERNAL_PORT=9092
KAFKA_INTERNAL_PORT=29092
KAFKA_CONTROLLER_PORT=9093
CLUSTER_ID=event-trigger-kafka-cluster-v1

# API Server Configuration
API_PORT=8080
LOG_LEVEL=info

# Scheduler Configuration
SCHEDULER_INTERVAL=5s

# Database URL (constructed from above values)
# Format: ${MYSQL_USER}:${MYSQL_PASSWORD}@tcp(mysql:${MYSQL_PORT})/${MYSQL_DATABASE}?parseTime=true&loc=UTC
DATABASE_URL=appuser:apppassword@tcp(mysql:3306)/event_trigger?parseTime=true&loc=UTC

# Kafka Brokers (internal Docker network)
KAFKA_BROKERS=kafka:29092
